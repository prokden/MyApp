<h1 class="mb-4"><%= @question.title %></h1>


<time datetime="<%= @question.formatted_created_at %>">
  <%= @question.formatted_created_at %>
</time>
  
  <p class="lead my-3">
    <%= @question.body %>
  </p>

<div class="btn-group">
  <%= link_to 'Данные', question_path(@question), class: 'btn btn-secondary' %> 
      <%= link_to 'Редактировать', edit_question_path(@question), class: 'btn btn-secondary'  %> 
      <%= link_to 'Удалить', question_path(@question), class: 'btn btn-danger', data: {method: :delete, confirm: 'Уверен?'} %>
</div>

<hr class="my-3">

<h3>Введите ответ<h3>

<%= form_with model: [@question,@answer] do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>


  <%= f.submit "Добавить ответ!", class: 'btn btn-secondary' %>
<% end %>

<h2 class="mb-5">Ответы</h2>

<% @answers.each do |answer|%>
  <article class="mb-3">
    <small><time datetime="<%= answer.formatted_created_at %>">
          <%= answer.formatted_created_at %>
        </time></small>

    <p>
      <%= answer.body %>
    </p>

    <%= link_to 'Удалить', question_answer_path(@question, answer), class: 'btn btn-danger btn-sm',
        data: {method: :delete, confirm: "Точно?"} %>
  </article>
<% end %>